<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>

<body>
    <%- include('../partials/header') %>
    <main class="">
        <h1 class="">Login</h1>
        <form action="#" method="POST" id="login">
            <div class="mb-3">
                <label for="formGroupExampleInput" class="form-label">Email</label>
                <input name="email" type="email" class="form-control" id="formGroupExampleInput">
            </div>
            <div class="mb-3">
                <label for="formGroupExampleInput2" class="form-label">Contrase√±a<label>
                        <input name="password" type="password" class="form-control" id="formGroupExampleInput2">
            </div>
            <div class="mb-3">
                <input type="submit" class="btn btn-success w-100" value="Ingresar">
            </div>
        </form>
    </main>

    <script>
        const newLogin = document.getElementById('login');
        NewLogin.addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData.entries());

            const response = await fetch('/login', {
                method: 'POST',
                body: JSON.stringify(data),
                headers: {
                    "Content-Type": "application/json"
                }
            })

            if(response.redirected){
                window.history.pushState('', null, response.url);
                window.location.assign(response.url);
            }
        })
    </script>
</body>

</html>